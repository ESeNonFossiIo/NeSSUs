.Phony: clean qsub sh

clean:
	@echo "======================================================================"
	@echo " ---> removing *~ *.e* *.o* _tmp_* *.bak* files"
	@rm -rf *~ *.e* *.o* *.bak* _job_* _tmp_*
	@echo "======================================================================"

tests:
	@nosetests --verbosity=2 _tests/

qsub:
	@echo "======================================================================"
	@echo " ---> QSUB"	
	@echo "======================================================================"
	@for file in `find . -name *.pbs`;do qsub $$file; done
	@echo "======================================================================"

sh:
	@echo "======================================================================"
	@echo " ---> SH"	
	@echo "======================================================================"
	@for file in `find . -name *.sh`;do sh $$file; done
	@echo "======================================================================"